nextflow_process {

    name "Test Process ENRICHMENT"
    script "../main.nf"
    process "ENRICHMENT"

    tag "modules"
    tag "modules_"
    tag "enrichment"

    test("enrichment - run") {

        when {
            process {
                """
                input[0] = [
                    [id: 'simtest', chromosome: 'chr22', genes: 'A, B, C', reps: 3, groups: 2], // meta map
                    file('https://raw.githubusercontent.com/LorenzoS96/eduomics_testdata-dev/refs/heads/main/rnaseq/deanalysis/resdata.rds', checkIfExists: true)
                ]
                input[1] = file('https://raw.githubusercontent.com/LorenzoS96/eduomics_testdata-dev/refs/heads/main/rnaseq/deanalysis/tx2gene.tsv', checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                {
                    def outputDir = new File(process.out.results.get(0)[1].toString())

                    // Check that the enrichment_results.rds file always exists
                    assert new File(outputDir, 'enrichment_results.rds').exists()

                    // Check for the existence of potential plot files
                    ['BP', 'MF', 'CC'].each { ont ->
                        assert new File(outputDir, "dotplot_${ont}.png").exists() || !new File(outputDir, "dotplot_${ont}.png").exists()
                        assert new File(outputDir, "cnetplot_${ont}.png").exists() || !new File(outputDir, "cnetplot_${ont}.png").exists()
                    }
                },
                { assert process.out.versions }
            )
        }
    }

    test("enrichment - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [id: 'simtest', chromosome: 'chr22', genes: 'A, B, C', reps: 3, groups: 2], // meta map
                    file('https://raw.githubusercontent.com/LorenzoS96/eduomics_testdata-dev/refs/heads/main/rnaseq/deanalysis/resdata.rds', checkIfExists: true)
                ]
                input[1] = file('https://raw.githubusercontent.com/LorenzoS96/eduomics_testdata-dev/refs/heads/main/rnaseq/deanalysis/tx2gene.tsv', checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                {
                    def outputDir = new File(process.out.results.get(0)[1].toString())

                    // Check that the enrichment_results.rds file exists
                    assert new File(outputDir, 'enrichment_results.rds').exists()

                    // In stub mode, all potential plot files should exist
                    ['BP', 'MF', 'CC'].each { ont ->
                        assert new File(outputDir, "dotplot_${ont}.png").exists()
                        assert new File(outputDir, "cnetplot_${ont}.png").exists()
                    }
                },
                { assert process.out.versions }
            )
        }
    }
}
