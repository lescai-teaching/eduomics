nextflow_process {

    name "Test Process ENRICHMENT"
    script "../main.nf"
    process "ENRICHMENT"

    tag "modules"
    tag "modules_"
    tag "enrichment"

    test("enrichment - run") {

        when {
            process {
                """
                input[0] = [
                    [id: 'simtest', chromosome: 'chr22', genes: 'A,B,C', reps: 3, groups: 2], // meta map
                    file('https://raw.githubusercontent.com/lescai-teaching/eduomics_testdata/refs/heads/main/rnaseq/enrichment/resdata.rds', checkIfExists: true)
                ]
                input[1] = [
                    [id: 'simtest', chromosome: 'chr22', genes: 'A,B,C', reps: 3, groups: 2], // meta map
                    file('https://raw.githubusercontent.com/lescai-teaching/eduomics_testdata/refs/heads/main/rnaseq/enrichment/tx2gene.tsv', checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert process.out.enrichment_results },
                { assert process.out.enrichment_results[0][1].endsWith("enrichment_results.rds") },
                {
                    def plots = process.out.enrichment_results[0].size() > 2 ? process.out.enrichment_results[0][2] : null
                    if (plots != null) {
                        plots.each { plot ->
                            assert plot.endsWith(".png")
                        }
                    }
                },
                { assert process.out.versions }
            )
        }
    }

    test("enrichment - stub") {

        options "-stub"

