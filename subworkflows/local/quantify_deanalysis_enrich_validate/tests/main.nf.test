nextflow_workflow {

    name "Test Subworkflow QUANTIFY_DEANALYSIS_ENRICH_VALIDATE"
    script "../main.nf"
    workflow "QUANTIFY_DEANALYSIS_ENRICH_VALIDATE"

    tag "subworkflows"
    tag "subworkflows_"
    tag "subworkflows/quantify_deanalysis_enrich_validate"
    tag "salmon"
    tag "salmon/quant"
    tag "deseq2"
    tag "enrichment"
    tag "validation"


