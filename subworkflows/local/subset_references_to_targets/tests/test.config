params {
    outdir = "."
}

process {
    resourceLimits = [
        cpus: 2,
        memory: 12.GB,
        time: 1.h
    ]

    publishDir = [
        path: { "${params.outdir}/${task.process.tokenize(':')[-1].tokenize('_')[0].toLowerCase()}" },
        mode: 'copy',
        saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
    ]

    withName: 'SAMTOOLS_FAIDX_SUBSET' {
        ext.args = ''
    }

    withName: 'SAMTOOLS_FAIDX_INDEX' {
        ext.args = 'false'
    }

    withName: 'SAMTOOLS_FAIDX_SIZES' {
        ext.args = 'true'
    }

    withName: 'SUBSETCAPTURE' {
        ext.args = ''
    }

    withName: 'GATK4_SELECTVARIANTS_.*' {
        ext.args = ''
    }

    withName: 'SUBVAR' {
        ext.args = ''
    }
}

process {
    conda = { "${projectDir}/environments/${task.process.tokenize(':')[-1].toLowerCase()}.yml" }
}

conda {
    enabled = true
    cacheDir = "${projectDir}/conda_cache"
}
